{
  "name": "@techpivot/streaming-slack-notify",
  "version": "0.0.0",
  "description": "The definitive Github Action for streaming workflow job status to Slack.",
  "author": "TechPivot",
  "license": "MIT",
  "homepage": "https://github.com/techpivot/streaming-slack-notify#readme",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "packages/github-action/index.ts",
  "scripts": {
    "lint": "eslint packages/**/*.ts",
    "lint:fix": "eslint --fix packages/**/*.ts",
    "format:check": "prettier --check **/*.{ts,js,json,yml,md}",
    "format": "prettier --write -l **/*.{ts,js,json,yml,md}",
    "build:action": "cd packages/github-action && yarn build",
    "postinstall": "cd packages/api/lambda-slack-authorize && yarn install && cd ../../github-action && yarn install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techpivot/streaming-slack-notify.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "Slack",
    "Notify",
    "Streaming"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  },
  "dependencies": {
    "@octokit/webhooks": "^7.6.2",
    "aws-sdk": "^2.679.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "@octokit/types": "^4.0.2",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3"
  }
}
